<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="amount_of_water_report_view_pivot" model="ir.ui.view">
            <field name="name">amount_of_water.report.pivot</field>
            <field name="model">cmsw.amount_of_water</field>
            <field name="arch" type="xml">
                <pivot string="Phân tích">
                    <field name="household_id" />
                    <field name="consume"  type="measure"/>
                    <field name="month"/>
    <!--                <field name="confirmation_date" interval="month" type="row"/>-->
                </pivot>
            </field>
        </record>

        <record id="amount_of_water_report_view_graph" model="ir.ui.view">
        <field name="name">amount_of_water.report.graph</field>
        <field name="model">cmsw.amount_of_water</field>
        <field name="arch" type="xml">
            <graph string="Phân tích"  type="line">
                <field name="household_id" type="col"/>
                <field name="consume" type="row"/>
<!--                <field name="user_id" type="col"/>-->
<!--                <field name="confirmation_date" interval="month" type="row"/>-->
            </graph>
        </field>
    </record>

        <record model="ir.actions.act_window" id="amount_of_water_reporting_act">
            <field name="name">Thống kê lượng nước tiêu thụ</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cmsw.amount_of_water</field>
            <field name="view_mode">tree,form,graph,pivot</field>
        </record>


    </data>
</odoo>