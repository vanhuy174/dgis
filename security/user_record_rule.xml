<!--        PHÂN QUYỀN CHO NHÂN VIÊN KHU VỰC-->
        <record id="employee_area_rule1" model="ir.rule">
            <field name="name">Nhân viên khu vực chỉ được nhìn thấy hộ gia đình trong khu vực quản lý</field>
<!--            id của model-->
            <field ref="model_cmsw_household" name="model_id"/>
<!--            domain_force: Điều kiện lọc: ở đây lấy file create_uid được odoo tạo tự động trong bất cứ model nào: kiểm tra id của người tạo bookloan có bằng id của người dùng đang đăng nhập không-->
            <field name="domain_force">[('address_id.id', '=', user.address_id.id)]</field>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_unlink" eval="0"/>
            <!-- You can attach this rule to a specific group, Or make it Global : áp dụng quyền cho nhóm nào -->
            <field name="groups" eval="[(4, ref('customer_group_area'))]"/>
            <!--<field name="global" eval="1"/> -->
        </record>

