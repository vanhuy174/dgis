<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--create the groups-->
        <record id="cmsw_customer_group" model="ir.module.category">
            <field name="name">Nhóm quyền quản lý khách hàng sử dụng nước</field>
            <field name="description">Access right for employees</field>
            <field name="sequence">5</field>
        </record>
        <record id="customer_group_manager" model="res.groups">
            <field name="name">Nhân viên quản trị</field>
            <!--Inherit from internal user-->
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="category_id" ref="cmsw_customer_group"/>
        </record>
        <record id="customer_group_area" model="res.groups">
            <field name="name">Nhân viên khu vực</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="cmsw_customer_group"/>
        </record>
        <record id="customer_group_import" model="res.groups">
            <field name="name">Nhân viên nhập liệu</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="cmsw_customer_group"/>
        </record>

        
    </data>
</odoo>