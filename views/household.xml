<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="cmsw_household_form" model="ir.ui.view">
            <field name="name">cmsw.household.form</field>
            <field name="model">cmsw.household</field>
            <field name="arch" type="xml">
                <form string="Hộ gia đình">
                    <sheet>
                        <field name="is_company" invisible="1"/>
<!--                        <field name="image" widget="image" class="oe_avatar" width="80" height="200" margin-right="50"/>-->
<!--                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;}"/>-->
                        <field name="image" widget='image' class="oe_avatar"
                               options='{"preview_image": "image_medium"}' />
<!--                        <field name="photo" widget="image" attrs="{'readonly':[('state','in',['alumni','terminate'])]}" class="oe_avatar oe_left" style="max-width:100px;max-height:117px;"/>-->
                        <div class="oe_title">
                            <field name="company_type" options="{'horizontal': true}" class="oe_edit_only"
                                   widget="radio"/>
                            <h1>
                                <field name="name" default_focus="1" palaceholder="Chủ hộ"/>
                            </h1>
                        </div>
                        <group string="Thông tin cá nhân">
                            <group>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="cmnd" attrs="{'invisible': [('is_company','=', True)]}"/>
                                <field name="date_allow" attrs="{'invisible': [('is_company','=', True)]}"/>
                                <field name="tax_id" placeholder="e.g. BE0477472701"
                                       attrs="{'invisible': [('is_company','=', False)]}"/>
                                <field name="director" placeholder="Director"
                                       attrs="{'invisible': [('is_company','=', False)]}"/>
                            </group>
                            <group>
                                <label for="street" string="Địa chỉ"/>
                                <div class="o_address_format">
                                    <field name="apart_num" placeholder="Số nhà..." class="o_address_street"/>
                                    <field name="street" placeholder="Tổ..." class="o_address_street"/>
                                    <field name="address_id" class="o_address_state" placeholder="Phường" options='{"always_reload": True}'/>
                                    <field name="district" placeholder="Huyện" class="o_address_zip" style="margin-right: 3px;" options='{"always_reload": True}'/>
                                    <field name="province" placeholder="Thành phố" class="o_address_zip" options='{"always_reload": True}'/>
                                </div>
                                <field name="area" options='{"always_reload": True}'/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Ghi chú ..." colspan="4"/>
                        </group>

                        <label for="street" string="Thông tin khác" style="font-size: 20px;"/>
                        <notebook >
                            <page string="Thông tin sử dụng nước">
                                <group>
                                    <field name="pur_use"/>
                                    <field name="water_meter_number"/>
                                    <field name="user_num"/>
                                    <field name="amount_water_id"
                                        widget="section_and_note_one2many"
                                        mode="tree,kanban" readonly='True'>
                                        <tree>
                                            <field name="month"/>
                                            <field name="csc"/>
                                            <field name="csm"/>
                                            <field name="consume" sum="Tổng tiêu thụ"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="Thành viên thuộc hộ gia đình" attrs="{'invisible': [('is_company','=', True)]}">
                                <group>
                                     <field name="member_of_fam" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="cmsw_household_kanban" model="ir.ui.view">
             <field name="name">Hộ gia đình</field>
             <field name="model">cmsw.household</field>
             <field name="arch" type="xml">
                 <kanban>
                     <templates>
                         <t t-name="kanban-box">
<!--                             thẻ để có thể click vào-->
                             <div class="oe_kanban_global_click">
<!--                                 t-att-src: là 1 thẻ javascript trong odoo để hiện ảnh khi click vào. Tham số là tên model, thuộc tính cần dùng-->
<!--                                 <img t-att-src="kanban_image('cmsw.household', 'image', record.id.value)"-->
<!--                                      t-att-title="record.id.value" width="64" height="64" class="o_kanban_image pull-left" alt="Image"/>-->
                                 <div class="oe_kanban_detail">
                                     <strong><field name="name"/></strong><br/>
                                     Mã HGĐ: <field name="name_seq"/><br/>
                                     SĐT: <field name="phone"/><br/>
                                     Email: <field name="email"/>
                                 </div>
                             </div>
                         </t>
                     </templates>
                 </kanban>
             </field>
        </record>

        <record id="cmsw_household_tree" model="ir.ui.view">
            <field name="name">cmsw.household.tree</field>
            <field name="model">cmsw.household</field>
            <field name="arch" type="xml">
                <tree string="Hộ gia đình">
                    <field name="name_seq"/>
                    <field name="name"/>
                    <field name="user_num"/>
                    <field name="water_meter_number"/>

                </tree>
            </field>
        </record>

        <record id="cmsw_household_act" model="ir.actions.act_window">
            <field name="name">Hộ gia đình </field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cmsw.household</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    New household
                </p>
            </field>
        </record>

        

    </data>
</odoo>