<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type=”text/css” href=”custom_water/static/src/css/style.css”?>
<odoo>
    <data>

        <record model="ir.ui.view" id="cmsw_bill_form_view">
            <field name="name">cmsw.bill.form</field>
            <field name="model">cmsw.bill</field>
            <field name="arch" type="xml">
                <form string="Orders">
                    <form string="Sales Order" class="o_sale_order">
                        <header>
<!--                            <button name="action_quotation_send" string="Send by Email" type="object"-->
<!--                                    class="btn-primary"/>-->
                            <button name="action_done" id="action_done"
                                    string="Confirm" class="btn-primary" type="object" attrs="{'invisible': [('state', 'not in', ['done','draft'])]}"/>
<!--                                    groups="customer_imus.customer_group_manager"-->

                            <button name="print_quotation" string="Print" type="object" states="done"
                                    class="o_sale_print"/>
                            <button name="action_cancel" states="draft,done" type="object" string="Cancel"/>
                            <button name="action_done" type="object" string="Done"
                                    attrs="{'invisible': [('state', '=','done')]}"
                                    help="If the sale is locked, you can not modify it anymore. However, you will still be able to invoice or deliver."/>
                            <button name="action_draft" states="cancel" type="object" string="Draft"/>
                            <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                        </header>
                    </form>
                    <sheet>

                        <br/>
                        <div class="row" style="font-size: 10px; line-height: 10px;">
                            <div class="col-5" align="center">
                                <p style="font-size: 15px;"><b>CÔNG TY CỔ PHẦN VIWACO</b></p>
                                <p style="font-size: 13px;">Địa chỉ: Tầng 1, nhà 17T7, Khu ĐT Trung Hóa Nhân Chính</p>
                                <p style="font-size: 13px;"> Phường Nhân Chính, Quận Thanh Xuân</p>
                                <p style="font-size: 13px;">Thành phố Hà Nội, Việt Nam</p>
                            </div>
                            <div class="col-4" align="center">
                                <p style="font-size: 20px;"><b>HÓA ĐƠN GIÁ TRỊ GIA TĂNG</b></p>
                                <p style="font-size: 20px;"><b>(TIỀN NƯỚC)</b></p>
                                <p style="font-size: 13px;">Bản thể hiện của hóa đơn điện tử</p>
                                <p style="font-size: 13px;">Tháng <field name="month" options='{"always_reload": True}' /> năm 2020</p>
                            </div>
                            <div class="col-1" align="center">
                                <p style="font-size: 13px;"><b>Mã số khách hàng <br/> <field name="customer_id" style="padding: 10px; border: 1px solid green;" options="{&quot;no_open&quot;: True}"/></b></p>
                            </div>
                            <div class="col-2" align="left">
                                <p><b>Mẫu số: 01T1S5DF1</b></p>
                                <p>Mã số thuế: 11SA2D2151/151</p>
                                <p>Ký hiệu: <b style="font-size: 15px;">SJD/1C</b></p>
                                <p>Số: <b style="font-size: 15px;">15654PUS</b></p>
                            </div>
                        </div>

                        <group>
                            <label for="street" string="Tên, Địa chỉ khách hàng" style="font-weight:bold"/>
                            <group>
                                <div class="o_address_format" style="border: 1px solid green; width: 500px; padding: 10px;">
                                    <field name="household_id" context="{'show_street': 1, 'show_tax_id': True}"
                                       options='{"always_reload": True}'/>
                                    <field name="apart_num" placeholder="Số nhà..." class="o_address_street" options='{"always_reload": True}'/>
                                    <field name="street" placeholder="Tổ..." class="o_address_street" options='{"always_reload": True}'/>
                                    <field name="town" class="o_address_state" placeholder="Phường" options='{"always_reload": True}' />
                                    <field name="district" placeholder="Huyện" class="o_address_zip" style="margin-right: 3px;" options='{"always_reload": True}'/>
                                    <field name="province" placeholder="Thành phố" class="o_address_city" options='{"always_reload": True}'/>
                                </div>
                            </group>
                            <group>
                                <field name="month" options='{"always_reload": True}' />
                                <label for="date" string="Thời gian sử dụng"/>
                                <div class="o_address_format">
                                    <field name="from_date" placeholder="Từ ngày..." class="o_address_state" options="{&quot;no_open&quot;: True}" />
                                    <span>-</span>
                                    <field name="to_date" placeholder="Đến ngày..." class="o_address_zip" style="width: 200px; margin-left:7px;" options="{&quot;no_open&quot;: True}"/>
                                </div>
                                <field name="create_at_bill" options='{"always_reload": True}'/>
                                <field name="create_at_water" options='{"always_reload": True}' />
                            </group>
                        </group>
                        <notebook>
                            <page string="Lượng nước tiêu thụ" name="amount_of_water_line">
                                <field
                                        name="amount_of_water_line"
                                        widget="section_and_note_one2many"
                                        mode="tree,kanban"

                                >
                                    <tree>
                                        <field name="csc"  style="padding-left:250px;"/>
                                        <field name="csm" style="padding-left:250px;"/>
                                        <field name="consume" style="padding-left:250px;"/>
                                        <field name="price" style="padding-left:250px;"/>
                                        <field name="price_subtotal" widget="monetary" style="padding-left:250px;" />
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer">
                                    <group class=" oe_left" colspan="2">
                                       <field name="signed" widget='image' class="oe_avatar" width="200" height="100" margin-right="50" />
                                    </group>
                                    <group class="oe_subtotal_footer oe_right" colspan="2">
                                        <field name="amount_untax" widget='monetary'
                                               options="{'currency_field': 'currency_id'}"/>
                                        <field name="tax_vat" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                        <field name="tax_env" widget='monetary' options="{'currency_field': 'currency_id'}"/>
    <!--                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">-->
    <!--                                        <button name="button_dummy"-->
    <!--                                                states="draft,sent" string="(update)" type="object"-->
    <!--                                                class="oe_edit_only oe_link"/>-->
    <!--                                        <label for="amount_total"/>-->
    <!--                                    </div>-->
                                        <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator"
                                               widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                        <field name="currency_id" invisible="1"></field>
                                    </group>
                                </group>
                                <span ><b>Số tiền bằng chữ: </b></span><field name="note" class="oe_inline" placeholder="Số tiền bằng chữ..."/>
                                <div class="oe_clear"/>
                            </page>
                            <page string="Thông tin khác">
                                <group>
                                    <group string="" name="sales_person" >
                                        <field name="code" required="True"/>
                                        <field name="sign"/>
                                        <field name="number"/>
                                    </group>
                                    <group string="Nhà cung cấp" name="sale_shipping">
                                        <field name="company_id" options="{'no_create': True}"/>
                                        <field name="tax_code"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="cmsw_bill_tree" model="ir.ui.view">
            <field name="name">cmsw.amount_of_water.tree</field>
            <field name="model">cmsw.bill</field>
            <field name="arch" type="xml">
                <tree string="Hóa đơn" colors="blue:usage=='view'; darkred:usage=='internal'">
                    <field name="number"/>
                    <field name="household_id"/>
                    <field name="month" />

                </tree>
            </field>
        </record>

        <record id="cmsw_bill_act" model="ir.actions.act_window">
            <field name="name">Hóa đơn</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cmsw.bill</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Tạo hóa đơn đầu tiên
                </p>
            </field>
        </record>

    </data>
</odoo>