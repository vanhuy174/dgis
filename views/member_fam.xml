<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="cmsw_member_fam_form" model="ir.ui.view">
            <field name="name">cmsw.member_family.form</field>
            <field name="model">cmsw.member_family</field>
            <field name="arch" type="xml">
                <form string="Thành viên">
                    <sheet>
<!--                        <field name="image" widget="image" class="oe_avatar" width="80" height="200" margin-right="50"/>-->
<!--                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;}"/>-->
                        <field name="image" widget='image' class="oe_avatar"
                               options='{"preview_image": "image_medium"}' />
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" default_focus="1" palaceholder="Thành viên"/>
                            </h1>
                        </div>
                        <group string="Thông tin cá nhân">
                            <group>
                                <field name="date_of_birth"/>
                                <field name="gender"/>
                                <field name="folk"/>
                                <field name="cmnd"/>
                                <field name="date_allow"/>
                                <field name="job"/>
                            </group>
                            <group>
                                <label for="street" string="Địa chỉ"/>
                                <div class="o_address_format">
                                    <field name="apart_num" placeholder="Số nhà..." class="o_address_street"/>
                                    <field name="street" placeholder="Tổ..." class="o_address_street"/>
                                    <field name="street2" placeholder="Đường..." class="o_address_street"/>
                                    <field name="town" class="o_address_state" placeholder="Phường" options="{&quot;no_open&quot;: True}"/>
                                    <field name="district" placeholder="Huyện" class="o_address_zip"/>
                                    <field name="city" placeholder="Thành phố" class="o_address_city"/>
                                </div>
                                <field name="religion"/>
                                <field name="nation"/>
                            </group>
                        </group>
                        <group string="Thông tin khác">
                            <field name="relationship"/>
                            <field name="household_id"/>
                            <field name="description" placeholder="Ghi chú ..." colspan="4"/>
                        </group>
<!--                        <notebook>-->
<!--                            <page string="Thông tin khách hàng">-->

<!--                            </page>-->
<!--                            <page string="Sổ hộ khẩu">-->
