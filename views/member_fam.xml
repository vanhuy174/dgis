<!--                                    <group>-->
<!--                                    <field name="name_other"/>-->
<!--                                    <field name="date_of_birth"/>-->
<!--                                    <field name="gender"/>-->
<!--                                    <field name="folk"/>-->
<!--                                    <field name="religion"/>-->
<!--                                    <field name="job"/>-->
<!--                                </group>-->
<!--                                <group>-->
<!--                                        <label for="street" string="Quê quán"/>-->
<!--                                        <div class="o_address_format">-->
<!--                                            <field name="apart_num_h" placeholder="Số nhà..." class="o_address_street"/>-->
<!--                                            <field name="street_h" placeholder="Tổ..." class="o_address_street"/>-->
<!--                                            <field name="street2_h" placeholder="Đường..." class="o_address_street"/>-->
<!--                                            <field name="town_h" class="o_address_state" placeholder="Phường" options="{&quot;no_open&quot;: True}"/>-->
<!--                                            <field name="district_h" placeholder="Huyện" class="o_address_zip"/>-->
<!--                                            <field name="city_h" placeholder="Thành phố" class="o_address_city"/>-->
<!--                                        </div>-->
<!--                                    <field name="nation"/>-->
<!--                                </group>-->
<!--                                </group>-->
<!--                            </page>-->
<!--                        </notebook>-->
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="cmsw_member_fam_tree" model="ir.ui.view">
            <field name="name">cmsw.member_family.tree</field>
            <field name="model">cmsw.member_family</field>
            <field name="arch" type="xml">
                <tree string="Thành viên">
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="date_of_birth"/>
                </tree>
            </field>
        </record>
        <record id="cmsw_member_fam_act" model="ir.actions.act_window">
            <field name="name">Thành viên</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cmsw.member_family</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    New member of family
                </p>
            </field>
        </record>


    </data>
</odoo>